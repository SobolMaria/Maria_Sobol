def first_non_repeating_letter(letter):
    for i in range(len(letter)):
        x = 0
        for j in range(len(letter)):
            if letter[i] == letter[j].upper() or letter[i] == letter[j].lower():
                x = x+1
        if x == 1:
            return letter[i]
            break
    return 'None'
print(first_non_repeating_letter("stress"))
print(first_non_repeating_letter("sTreSS"))
print(first_non_repeating_letter("abba"))
