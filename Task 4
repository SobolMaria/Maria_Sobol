import numpy as np
def my_array(arr, p):
    i = 0
    pairs = 0
    while i < len(arr):
        j = 0
        while j < len(arr):
            if j == i:
                break
            if arr[i] + arr[j] == p:
                pairs=pairs+1
            j += 1
        i += 1
    return pairs

arr = np.array([1, 3, 6, 2, 0, 4, 5])
p = 5
print(my_array(arr, p))